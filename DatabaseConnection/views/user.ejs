<h2 align="center">User page</h2>

<form method="post" action="/user/addUser">
    <table align="center" border="1">
        
        <tr>
            <td>Firstname:</td>
            <td><input type="text" name="fname" ></td>
        </tr>
        <tr>
            <td>Lastname:</td>
            <td><input type="text" name="lname" ></td>
        </tr>
        <tr>
            <td>Gender:</td>
            <td><input type="text" name="gender" ></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td><input type="email" name="email" ></td>
        </tr>
        <tr>
            <td>Phone:</td>
            <td><input type="number" name="phoneNo" ></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Add User" ></td>
        </tr>
    </table>
    <hr>
    <table align="center" border="1">
        <tr>
            <td>Id</td>
            <td>Firstname</td>
            <td>Lastname</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Action</td>
        </tr>
        <% users.map((user)=>{ %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.fname %></td>
                    <td><%= user.lname %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phoneNo %></td>
                    <td>
                        <a href="">Edit</a> ||
                        <a href="">Delete</a>
                    </td>
                </tr>
            <% }) %>
    </table>
</form>