<h2 align="center">Prduct page</h2>

<form method="post" action="/product/addProduct" enctype="multipart/form-data">
    <table align="center" border="1">
        
        <tr>
            <td>Title:</td>
            <td><input type="text" name="title" ></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><input type="text" name="desc" ></td>
        </tr>
        <tr>
            <td>Category:</td>
            <td><input type="text" name="category" ></td>
        </tr>
        <tr>
            <td>Price:</td>
            <td><input type="number" name="price" ></td>
        </tr>
        <tr>
            <td>Upload Image:</td>
            <td>
                <input type="file" name="productImage" >
            
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Add Product" ></td>
        </tr>
    </table>
    <hr>
    <table align="center" border="1">
        <tr>
            <td>#</td>
            <td>title</td>
            <td>Desc</td>
            <td>Category</td>
            <td>Price</td>
            <td>Image</td>
            <td>Actions</td>
        </tr>
        <% products.map((product)=> { %>
            <tr>
                <td><%= product.id %></td>
                <td><%= product.title %></td>
                <td><%= product.desc %></td>
                <td><%= product.category %></td>
                <td><%= product.price %></td>
                <td>
                    <% if(product.productImage != "" ) { %>
                        <img src="<%= product.productImage %>"  height="100"/>
                    <% } %>
                </td>
                <td><button><a>Edit </a></button> || 
                    <button><a href="/product/delete/<%= product.id %>">Delete</a></button></td>
            </tr>
        <% }) %>

    </table>
    
</form>